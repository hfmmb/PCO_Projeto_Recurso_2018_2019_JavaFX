<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<GridPane xmlns="http://javafx.com/javafx/8.0.162-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.categoria.CategoriaController">
  <columnConstraints>
    <ColumnConstraints maxWidth="0.0" minWidth="0.0" prefWidth="0.0" />
    <ColumnConstraints hgrow="SOMETIMES" maxWidth="300.0" minWidth="10.0" prefWidth="300.0" />
  </columnConstraints>
  <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <VBox alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="3">

            <Label alignment="CENTER" contentDisplay="CENTER" prefWidth="200.0" text="Criar categoria">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
      <VBox>

            <RadioButton fx:id="radioButtonDialogCategoriaOrientado" mnemonicParsing="false" selected="true" text="Criar como orientado" />
            <RadioButton fx:id="radioButtonDialogCategoriaSupervisor" mnemonicParsing="false" text="Criar como Supervisor" />
            <RadioButton fx:id="radioButtonDialogCategoriaSupervisorOrientado" mnemonicParsing="false" text="Criar como supervisor em orientado" />
      </VBox>
      <ComboBox fx:id="comboBoxDialogCategoriaOrientado" prefWidth="200.0" promptText="Selecione o orientado" />
      <TextField fx:id="textFieldDialogCategoriaNome" alignment="CENTER" />
      <HBox alignment="CENTER">
                     <Button fx:id="buttonDialogCategoriaVoltar" alignment="CENTER" cancelButton="true" contentDisplay="CENTER" onAction="#buttonDialogCategoriaVoltarActionListener" text="Voltar" textAlignment="CENTER" />
               <Button fx:id="buttonDialogCategoriaCriar" mnemonicParsing="false" onAction="#buttonDialogCategoriaCriarActionListener" text="Criar" />
               </HBox>
   </VBox>
   </GridPane>
